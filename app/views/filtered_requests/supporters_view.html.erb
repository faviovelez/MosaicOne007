<% if @supporters.count >= 1 %>
    <table>
      <thead>
        <tr>
          <th>tienda</th>
          <th>cantidad</th>
          <th>producto</th>
          <th>prospecto</th>
          <th>creada hace</th>
          <th>fecha compromiso</th>
          <th>estatus</th>
        </tr>
      </thead>
      <tbody>
        <% @supporters.each do |request| %>
          <tr>
            <td> <%= request.store.store_code %> - <%= request.store.store_name %> </td>
            <td><%= request.quantity %></td>
            <td>
              <% if request.product_type == 'otro'%>
                <%= request.name_type %>
              <% elsif request.product_type != 'otro'%>
                <%= request.product_type %>
              <% end %>
            </td>
            <% if request.prospect.present? %>
              <td><%= request.prospect.legal_or_business_name %></td>
            <% end %>
            <% @days = (Date.today - request.created_at.to_date).to_i %>
            <% if @days < 1 %>
              <td> hoy </td>
            <% elsif @days == 1 %>
              <td> 1 día </td>
            <% else @days > 1 %>
              <td> <%= @days %> días </td>
            <% end %>
            <% if request.delivery_date.present? %>
              <td> <%= I18n.l request.delivery_date, format: :short %></td>
            <% else %>
            <td> - </td>
              <% end %>
            <td> <%= request.status %></td>
            <td> <%= link_to 'detalles', request %> </td>
            <td> <%= link_to 'confirmar pedido', confirm_requests_path(request) %> </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  <% else %>
    <p class="individual-font">No hay solicitudes activas</p>
  <% end %>
