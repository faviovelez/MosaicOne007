<p id="notice"><%= notice %></p>

<% @unassigned.each do |request| %>
  <table>
    <thead>
      <tr>
        <th>tienda</th>
        <th>tipo de solicitud</th>
        <th>creada hace</th>
        <th>estatus</th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <td> <%= request.request.store.store_code %> - <%= request.request.store.store_name %> <        <td> <%= request.design_type %></td>
        <% @days = (Date.today - request.created_at.to_date).to_i %>
        <% if @days < 1 %>
          <td> hoy </td>
        <% elsif @days == 1 %>
          <td> 1 día </td>
        <% else @days > 1 %>
          <td> <%= @days %> días </td>
        <% end %>
        <td> <%= request.status %></td>
        <td> <%= link_to 'detalles', design_request_path(request) %> </td>
      </tr>
    </tbody>
  </table>
<% end %>
