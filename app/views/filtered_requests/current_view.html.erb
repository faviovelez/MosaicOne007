<p id="notice"><%= notice %></p>
<% @store_active.each do |request| %>

    <table>
      <thead>
        <tr>
          <th>tienda</th>
          <th>piezas</th>
          <th>creada hace</th>
          <th>fecha compromiso</th>
          <th>estatus</th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <td> <%= request.store.store_code %> - <%= request.store.store_name %> </td>
          <td> <%= request.quantity %> piezas </td>
          <td> <%= request.delivery_date %></td>
          <td> <%= request.status %></td>
          <td> <%= link_to 'detalles', request %> </td>
          <td> <%= link_to 'confirmar pedido', confirm_requests_path(request) %> </td>
        </tr>
      </tbody>
    </table>
<% end %>
