<p id="notice"><%= notice %></p>

<% @assigned.each do |request| %>
  <table>
    <thead>
      <tr>
        <th>tienda</th>
        <th>cantidad</th>
        <th>producto</th>
        <th>creada hace</th>
        <th>fecha compromiso</th>
        <th>estatus</th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <td> <%= request.store.store_code %> - <%= request.store.store_name %> </td>
        <td><%= request.quantity %></td>
        <td>
          <% if request.product_type == 'otro'%>
            <%= request.name_type %>
          <% elsif request.product_type != 'otro'%>
            <%= request.product_type %>
          <% end %>
        </td>
        <% @days = (Date.today - request.created_at.to_date).to_i %>
        <% if @days < 1 %>
          <td> hoy </td>
        <% elsif @days == 1 %>
          <td> 1 día </td>
        <% else @days > 1 %>
          <td> <%= @days %> días </td>
        <% end %>
        <% if request.delivery_date.present? %>
          <td> <%= I18n.l request.delivery_date, format: :short %></td>
        <% else %>
        <td> - </td>
          <% end %>
        <td> <%= request.status %></td>
        <% if request.internal_price.blank? %>
          <td> <%= link_to 'cotizar', manager_requests_path(request) %> </td>
        <% elsif request.sensitive_fields_changed %>
          <td> <%= link_to 're-cotizar', manager_view_requests_path(request) %> </td>
        <% else %>
          <td> <%= link_to 'detalles', request_path(request) %> </td>
        <% end %>
      </tr>
    </tbody>
  </table>
<% end %>
