<% if @assigned.count >= 1 %>
    <table>
      <thead>
        <tr>
          <th>tienda</th>
          <th>tipo de solicitud</th>
          <th>creada hace</th>
          <th>estatus</th>
        </tr>
      </thead>
      <tbody>
        <% @assigned.each do |request| %>
          <tr>
            <td> <%= request.request.store.store_code %> - <%= request.request.store.store_name %> </td>
            <td> <%= request.design_type %></td>
            <% @days = (Date.today - request.created_at.to_date).to_i %>
            <% if @days < 1 %>
              <td> hoy </td>
            <% elsif @days == 1 %>
              <td> 1 día </td>
            <% else @days > 1 %>
              <td> <%= @days %> días </td>
            <% end %>
            <td> <%= request.status %></td>
            <td> <%= link_to 'detalles', design_request_path(request) %> </td>
          </tr>
        <% end %>
      </tbody>
    </table>
<% else %>
  <p class="individual-font">No hay solicitudes activas</p>
<% end %>
