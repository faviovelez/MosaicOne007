<table>
  <thead>
    <tr class="table-titles">
      <th>Código</th>
      <th>Descripción</th>
      <th>Color/Diseño</th>
      <th>Línea de producto</th>
      <th>Precio</th>
    </tr>
  </thead>

  <tbody>
    <% @inventories.each do |inventory| %>
      <tr>
        <td class="col-md-1"><%= inventory.product.unique_code %></td>
        <td class="col-md-2"><%= inventory.product.description %></td>
        <td class="col-md-1"><%= inventory.product.exterior_color_or_design %></td>
        <td class="col-md-2"><%= inventory.product.line %></td>
        <td class="col-md-1"><%= number_to_currency(inventory.product.price) %></td>
        <td class="col-md-1">
          <%= link_to inventory.product do %>
            <i class="fa fa-plus-square link-to-details" aria-hidden="true"></i>
            <span>Ver</span>
            <% end %>
        </td>
        <td class="col-md-1">
          <%= link_to edit_product_path(inventory.product) do %>
            <i class="fa fa-pencil-square link-to-confirm" aria-hidden="true"></i>
            <span class="link-to-confirm">Modificar</span>
            <% end %>
        </td>
      </tr>
  <% end %>

  </tbody>

</table>
