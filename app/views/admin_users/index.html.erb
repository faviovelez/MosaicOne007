
<% if @users.count >= 1 %>
  <table class="dataTableFour">
    <thead>
      <tr class="table-titles">
        <th class="col-md-2">Nombre</th>
        <th class="col-md-2">Tienda</th>
        <th class="col-md-2">Rol</th>
        <th class="col-md-2">Acciones</th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <% @users.each do |user| %>
          <td> <%= user.first_name %> <%= user.middle_name %> <%= user.last_name %> </td>
          <td> <%= user.store.store_name %> </td>
          <td> <%= user.role.translation.capitalize %> </td>
          <td>
            <%= link_to user_path(user) do %>
              <i class="fa fa-user link-to-details" aria-hidden="true"></i>
              <span>Ver usuario</span>
            <% end %>
          </td>
      </tr>
        <% end %>
    </tbody>
  </table>
<% else %>
  <p class="individual-font">AÃºn no hay usuarios registrados</p>
<% end %>
<%= render 'dataTables' %>
