<% if @business_units.count >= 1 %>
  <table class="dataTableFour">
    <thead>
      <tr class="table-titles">
        <th class="col-md-3">Nombre</th>
        <th class="col-md-1">Tiendas</th>
        <th class="col-md-1">Grupo</th>
        <th class="col-md-2">Acciones</th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <% @business_units.each do |business_unit| %>
          <td><%=business_unit.name %></td>
          <td><%=business_unit.stores.count %></td>
          <td><%=business_unit.business_group.name %></td>
          <td class="col-md-2">
            <%= link_to business_unit_path(business_unit), class: 'link-extra-space' do %>
              <i class="fa fa-plus-circle link-to-details" aria-hidden="true" data-toggle="tooltip" data-placement="left" title="Ver"></i>
            <% end %>
            <% if business_unit.billing_address.present?%>
              <%= link_to billing_address_path(business_unit.billing_address), class: 'link-extra-space' do %>
                <i class="fa fa-address-book-o link-to-confirm" aria-hidden="true" data-toggle="tooltip" data-placement="left" title="Datos de facturación"></i>
              <% end %>
            <% else %>
              <%= link_to new_business_unit_billing_address_path(business_unit), class: 'link-extra-space' do %>
                <i class="fa fa-address-book-o link-to-confirm" aria-hidden="true" data-toggle="tooltip" data-placement="left" title="Datos de facturación"></i>
              <% end %>
            <% end %>
          </td>
      </tr>
        <% end %>
    </tbody>
  </table>
<% else %>
  <p class="individual-font">Aún no hay empresas registradas</p>
<% end %>
<%= render 'dataTables' %>
