<%= form_for(@business_unit) do |f| %>

  <h2 class="info-title">Modificar Empresa </h2>

  <div class="form-container">

    <div class="form-inside-style">
      <%= f.label :nombre %>
      <%= f.text_field :name, value: @business_unit.name, class: 'form-inside' %>
    </div>

    <div class="form-inside-style">
      <%= f.label :grupo_de_negocio %>
      <%= f.select :business_group, options_for_select(BusinessGroup.all.collect{|bu| [bu.name, bu.id]}, selected: @business_unit.business_group) %>
    </div>

    <div class="button-container">
      <div class="actions">
        <%= f.submit :Guardar, name: 'guardar', class: 'main-button' %>
      </div>
    </div>

  </div>

<% end %>
