<% if @orders.count >= 1 %>
  <table>
    <thead>
      <tr class="table-titles">
        <th class="col-md-1">Pedido</th>
        <th class="col-md-1">Tipo</th>
        <th class="col-md-1">Productos</th>
        <th class="col-md-1">Piezas</th>
        <th class="col-md-1">Estatus</th>
      </tr>
    </thead>
    <tbody>
      <% @orders.each do |order| %>
        <tr>
          <td> <%= order.id %> </td>
          <td> <%= order.category %> </td>
          <td> <%= order.product_requests.count %> </td>
          <td> <%= number_with_delimiter(sum_quantity(order)) %> </td>
          <td> <%= order.status %> </td>
          <td class="col-md-1">
            <%= link_to orders_show_for_store_path(order) do %>
              <i class="fa fa-plus-square link-to-details" aria-hidden="true"></i>
              <span>Ver</span>
            <% end %>
          </td>
          <td class="col-md-1">
            <% if (order.status == 'en espera' || order.status == 'mercancía asignada' && (order.bill == nil)) %>
              <%= link_to delete_order_path(order), data: { confirm: "Desa cancelar el pedido #{order.id}?. Esta acción no se puede deshacer." } do %>
                <i class="fa fa-minus-square link-to-price" aria-hidden="true"></i>
                <span class="link-to-price">Borrar</span>
              <% end %>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <p class="individual-font">No tienes pedidos en espera.</p>
<% end %>
