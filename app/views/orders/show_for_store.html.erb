          <% end %>
          <td>
            <% if (@order.users.count > 0 && @order.prospect.id == current_user.store.store_prospect.id && @order.status == 'en ruta') %>
              <div class="all-hide hidden">
                <span class="for-hide" id="for-hide_<%= product_request.id %>">
                  ¿Completo?
                  <%= check_box_tag "complete[]", true, false, { multiple: true, id: "product_requests[#{product_request.id}]", class: 'for-hide-checkbox for-hide'} %>
                  <%= check_box_tag "complete[]", false, true, { multiple: true, id: "product_requests[#{product_request.id}]", class: "for-hide-checkbox for-hide hidden second-check_#{product_request.id}"} %>
                </span>
                <%= text_field_tag 'id[]', product_request.id, {class: 'hidden'} %>
                <a href="#" id="redLink_<%= product_request.id %>">
                  <i class="fa fa-warning red-icon" aria-hidden="true" data-toggle="tooltip" data-placement="left" title="Producto faltante"></i>
