            <% end %>
          <% end %>
          <% if ['store-admin', 'store', 'admin-desk'].include?(current_user.role.name) %>
            <td> <%= number_to_percentage(get_discount(product_request), precision: 1) %> </td>
            <td> <%= number_to_currency(get_total_from_pr(product_request, 'total')) %> </td>
