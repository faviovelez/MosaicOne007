            <td> <%= number_with_delimiter(product_request.quantity) %> </td>
          <% else %>
            <td> <%= number_with_delimiter(product_request.quantity) %> </td>
          <% end %>
          <% if @has_kg_products %>
            <% if @has_kg_products && product_request.product.group %>
