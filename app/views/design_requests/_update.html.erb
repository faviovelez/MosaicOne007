<%= form_for(@design_request) do |f| %>

  <div class="design form-container">
    <div class="field form-inside-style">
      <%= f.label :tipo_de_solicitud %>
      <%= f.select :design_type, options_for_select([['seleccione','seleccione'], ['elaborar o modificar diseño', 'diseño'], ['dummy físico', 'dummy'],['printcard','printcard']], selected: @design_request.design_type) %>
    </div>

    <div class="field form-inside-style">
      <%= f.label :descripción_de_la_solicitud %>
      <%= f.text_area :description, class: 'form-inside' %>
    </div>

    <div class="field form-inside-style">
      <%= f.label :subir_archivo %>
      <%= f.file_field :attachment, multiple: true %>
    </div>

    <div class="field form-inside-style hidden">
      <%= f.label :estatus %>
      <%= f.text_field :status, value: 'modificada' %>
    </div>

    <div class="button-container">
      <div class="actions">
        <%= f.submit :solicitar_diseño, name: 'enviar'%>
      </div>
    </div>
  </div>
<% end %>
