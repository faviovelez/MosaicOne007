
<%= image_tag '/assets/logo-disenos-decarton.png', alt: 'Logo Diseños de Cartón', class:'second-logo' %>
<div class="container-log-in">

<div class="sign-in-tittle-div">
  <h2 class="reg-title">Ingresa a Sistema DC</h2>
</div>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="field sign-in">
      <%= f.label :email %><br />
      <%= f.email_field :email, placeholder: 'ejemplo@ejemplo.com', class: 'long-sign-in' %>
    </div>

    <div class="field sign-in">
      <%= f.label :password %><br />
      <%= f.password_field :password, placeholder: 'Ingresa tu contraseña', autocomplete: "off", class: 'long-sign-in' %>
    </div>

    <% if devise_mapping.rememberable? -%>
      <div class="field">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end -%>

    <div class="actions">
      <%= f.submit "Ingresar", class: 'main-button' %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
