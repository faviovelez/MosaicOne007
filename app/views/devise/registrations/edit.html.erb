
<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= devise_error_messages! %>

  <h2 class="info-title">Modificar datos del usuario</h2>

  <div class="form-container">

    <div class="form-inside-style">
      <%= f.label :primer_nombre %>
      <%= f.text_field :first_name, class: 'form-inside', autofocus: true %>
    </div>

    <div class="form-inside-style">
      <%= f.label :segundo_nombre %>
      <%= f.text_field :middle_name, class: 'form-inside', autofocus: true %>
    </div>

    <div class="form-inside-style">
      <%= f.label :apellidos %>
      <%= f.text_field :last_name, class: 'form-inside', autofocus: true %>
    </div>

    <div class="form-inside-style">
      <%= f.label :email %>
      <%= f.email_field :email, class: 'form-inside', autofocus: true %>
    </div>

    <div class="form-inside-style">
      <%= f.label :rol_de_usuario %>
      <% if current_user.role.name == 'platform-admin' %>
        <%= f.select :role_id, options_for_select(Role.all.collect{|r| [r.translation, r.id]}, selected: resource.role_id) %>
      <% elsif current_user.role.name == 'store-admin' %>
        <%= f.select :role_id, options_for_select(Role.where(name: 'store').collect{|r| [r.translation, r.id]}, selected: resource.role_id) %>
      <% end %>
    </div>

    <div class="form-inside-style">
      <%= f.label :tienda %>
      <% if current_user.role.name == 'platform-admin' %>
        <%= f.select :store_id, options_for_select(Store.all.collect{|s| [s.store_name, s.id]}, selected: resource.store_id) %>
      <% elsif current_user.role.name == 'store-admin' %>
        <%= f.select :role_id, options_for_select(Store.where(store_name: current_user.store.store_name).collect{|s| [s.store_name, s.id]}, selected: resource.store_id) %>
      <% end %>
    </div>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <div>Esperando confirmación de: <%= resource.unconfirmed_email %></div>
    <% end %>

    <div class="form-inside-style">
      <br />
      <%= f.label :contraseña_actual %> <i>(Necesitamos tu password para realizar los cambios)</i><br />
      <%= f.password_field :current_password, autocomplete: "off", class: 'form-inside' %>
    </div>

    <div class="form-inside-style">
      <br />
      <%= f.label :nueva_contraseña %> <i>(Déjala en blanco si no quieres cambiarla,</i>
      <% if @minimum_password_length %>
      <em>mínimo <%= @minimum_password_length %> caracteres)</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "off", class: 'form-inside' %>
    </div>

    <div class="form-inside-style">
      <br />
      <%= f.label :confirmación_de_contraseña %><br />
      <%= f.password_field :password_confirmation, autocomplete: "off", class: 'form-inside' %>
    </div>

    <div class="button-container">
      <div class="actions">
        <%= f.submit "Editar", class: 'main-button bottom-button' %>
      </div>
    </div>

  </div>
<% end %>
