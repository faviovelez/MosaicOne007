<% if @prospects.count >= 1 %>
  <table id="prosp">
    <thead>
      <tr class="table-titles">
        <th class="col-md-3"> Nombre del prospecto</th>
        <th class="col-md-1"> Giro</th>
        <th class="col-md-1"> Tipo</th>
        <th class="col-md-1"> Acciones </th>
      </tr>
    </thead>
    <tbody>
      <% @prospects.each do |prospect| %>
      <tr>
        <td> <%= prospect.legal_or_business_name %> </td>
        <td> <%= prospect.business_type %> </td>
        <td> <%= prospect.prospect_type %> </td>
        <td class="col-md-2 flex-table">
          <%= link_to prospect do %>
            <i class="fa fa-plus-square link-to-details" aria-hidden="true"></i>
            <span class="hidden">Ver</span>
          <% end %>

          <%= link_to edit_prospect_path(prospect) do %>
            <i class="fa fa-pencil-square link-to-confirm" aria-hidden="true"></i>
            <span class="link-to-confirm hidden">Modificar</span>
          <% end %>

          <%= link_to new_prospect_request_path(prospect) do %>
            <i class="fa fa-cart-plus link-to-price" aria-hidden="true"></i>
            <span class="link-to-price hidden">Cotizar</span>
          <% end %>

          <% if prospect.requests.count >= 1 %>
            <%= link_to prospect_requests_path(prospect) do %>
              <i class="fa fa-book link-to-details hidden" aria-hidden="true"></i>
              <span>Cotizaciones</span>
            <% end %>
          <% end %>
        </td>
      </tr>
    <% end %>
    </tbody>
  </table>
<% else %>
  <p class="individual-font">No hay prospectos dados de alta </p>
<% end %>

<%= content_for :stylesheet do %>
  <%= stylesheet_link_tag 'datatables.min' %>
<% end %>

<%= content_for :javascript do %>
  <%= javascript_include_tag 'pdfmake.min' %>
  <%= javascript_include_tag 'vfs_fonts.js' %>
  <%= javascript_include_tag 'datatables.min.js' %>
  <%= javascript_include_tag 'prospects_tables' %>
<% end %>
