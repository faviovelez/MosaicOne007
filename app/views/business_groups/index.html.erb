<% if @business_groups.count >= 1 %>
  <table class="dataTableFour">
    <thead>
      <tr class="table-titles">
        <th>Nombre</th>
        <th>Empresas</th>
        <th>Acciones</th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <% @business_groups.each do |business_group| %>
          <td><%=business_group.name %></td>
          <td><%=business_group.business_units.count %></td>
          <td class="col-md-1">
            <%= link_to business_group_path(business_group) do %>
              <i class="fa fa-plus-circle link-to-details" aria-hidden="true" aria-hidden="true" data-toggle="tooltip" data-placement="left" title="Ver"></i>
            <% end %>
          </td>
      </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <p class="individual-font">AÃºn no hay grupos de empresas registrados</p>
<% end %>
