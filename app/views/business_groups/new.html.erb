<%= form_for(@business_group) do |f| %>

  <h2 class="info-title">Corporativo </h2>

  <div class="form-container">

    <div class="form-inside-style">
      <%= f.label :nombre %>
      <%= f.text_field :name, value: @business_group.name, class: 'form-inside' %>
    </div>

    <div class="button-container">
      <div class="actions">
        <%= f.submit :Guardar, name: 'guardar', class: 'main-button' %>
      </div>
    </div>

  </div>

<% end %>
