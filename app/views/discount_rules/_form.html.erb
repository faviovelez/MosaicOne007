<%= content_for :stylesheet do %>
  <%= stylesheet_link_tag 'select2.min' %>
<% end %>

<%= content_for :javascript do %>
  <%= javascript_include_tag 'select2.min' %>
<% end %>

<body class="<%=params[:controller]%> <%=params[:action]%>">

  <% render 'discount_rules_errors' %>

  <%= form_for(@discount_rule) do |f| %>

    <div class="form-container">

      <div class="field form-inside-style">
        <%= f.label :lista_de_productos %><br>
        <%= f.select :product_list, options_for_select(select_products), {include_blank: true}, multiple: true %>
      </div>

      <div class="field form-inside-style">
        <%= f.label :lista_de_productos %><br>
        <%= f.select :product_list, options_for_select(select_products), {include_blank: true}, multiple: true %>
      </div>

      <div class="field">
        <%= f.label :percentage %><br>
        <%= f.text_field :percentage %>
      </div>

      <div class="field form-inside-style">
        <%= f.label :lista_de_clientes %><br>
        <%= f.select :prospect_list, options_for_select(select_prospects), {include_blank: true}, multiple: true %>
      </div>

      <div class="field">
        <%= f.label :product_id %><br>
        <%= f.text_field :product_id %>
      </div>

      <div class="field">
        <%= f.label :initial_date %><br>
        <%= f.date_select :initial_date %>
      </div>

      <div class="field">
        <%= f.label :final_date %><br>
        <%= f.date_select :final_date %>
      </div>

      <div class="field">
        <%= f.label :user_id %><br>
        <%= f.text_field :user_id %>
      </div>

      <div class="field">
        <%= f.label :rule %><br>
        <%= f.text_field :rule %>
      </div>

      <div class="field">
        <%= f.label :minimum_amount %><br>
        <%= f.text_field :minimum_amount %>
      </div>

      <div class="field">
        <%= f.label :minimum_quantity %><br>
        <%= f.number_field :minimum_quantity %>
      </div>

      <div class="field">
        <%= f.label :exclusions %><br>
        <%= f.text_field :exclusions %>
      </div>

      <div class="field">
        <%= f.label :active %><br>
        <%= f.check_box :active %>
      </div>

      <div class="field">
        <%= f.label :business_unit_id %><br>
        <%= f.text_field :business_unit_id %>
      </div>

      <div class="field">
        <%= f.label :store_id %><br>
        <%= f.text_field :store_id %>
      </div>

      <div class="actions">
        <%= f.submit %>
      </div>

    </div>
  <% end %>

</body>
