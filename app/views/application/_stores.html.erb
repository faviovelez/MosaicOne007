<% if params[:action] == 'current_view' %>
  <% @object = @store_active %>
<% elsif params[:action] == 'inactive_view' %>
  <% @object = @store_inactive %>
<% elsif params[:action] == 'saved_view' %>
  <% @object = @store_saved %>
<% elsif params[:action] == 'index' %>
  <% @object = @requests %>
<% end %>

<% unless params[:action] == 'inactive_view' %>
  <p id="notice"><%= notice %></p>
<% end %>

<% @object.each do |request| %>

    <table>
      <thead>
        <tr>
          <th>tienda</th>
          <th>cantidad</th>
          <th>producto</th>
          <th>prospecto</th>
          <th>creada hace</th>
          <th>fecha compromiso</th>
          <th>estatus</th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <td> <%= request.store.store_code %> - <%= request.store.store_name %> </td>
          <td><%= request.quantity %></td>
          <td>
            <% if request.product_type == 'otro'%>
              <%= request.name_type %>
            <% elsif request.product_type != 'otro'%>
              <%= request.product_type %>
            <% end %>
          </td>
          <% if request.prospect.present? %>
            <td><%= request.prospect.legal_or_business_name %></td>
          <% end %>
          <% @days = (Date.today - request.created_at.to_date).to_i %>
          <% if @days < 1 %>
            <td> hoy </td>
          <% elsif @days == 1 %>
            <td> 1 día </td>
          <% else @days > 1 %>
            <td> <%= @days %> días </td>
          <% end %>
          <% if request.delivery_date.present? %>
            <td> <%= request.delivery_date %></td>
          <% else %>
          <td> - </td>
            <% end %>
          <td> <%= request.status %></td>
          <td> <%= link_to 'detalles', request %> </td>
          <% if request.status == 'costo asignado'  %>
            <td> <%= link_to 'asignar precio', requests_price_path(request) %> </td>
          <% elsif request.status == 'precio asignado'  %>
            <td> <%= link_to 'confirmar pedido', confirm_requests_path(request) %> </td>
          <% end %>

        </tr>
      </tbody>
    </table>
<% end %>
