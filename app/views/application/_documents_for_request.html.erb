<% if @request.authorisation_signed %>
  <div class="document-link-area">
    <%= label_tag ('pedido autorizado:') %>
    <%= link_to @authorisation.first.document_url, target: '_blank' do %>
      <%= image_tag '/assets/document_blue.png', alt: 'Ícono documento azul', class: 'document-icon img-responsive' %>
    <% end %>
  </div>
<% end %>

<% if @request.payment_uploaded %>
  <div class="document-link-area">
    <%= label_tag ('anticipo del pedido:') %>
    <%= link_to @payment.first.document_url, target: '_blank' do %>
      <%= image_tag '/assets/document_blue.png', alt: 'Ícono documento azul', class: 'document-icon img-responsive' %>
    <% end %>
  </div>
<% end %>

<% if params[:action] != 'confirm_view' && @request.specification_document%>
    <div class="document-link-area">
      <% if @request.documents.where(document_type: 'especificación').count == 1 %>
        <%= label_tag ('archivo de especificaciones:') %>
        <%= link_to @specifications.first.document_url, target: '_blank' do %>
          <%= image_tag '/assets/notes.png', alt: 'Ícono documento naranja', class: 'document-icon img-responsive' %>
        <% end %>
        <%= link_to 'borrar', document_path(@specifications.first), method: :delete, data: { confirm: 'Desa borrar este documento?' } %>
      <% elsif @request.documents.where(document_type: 'especificación').count > 1 %>
        <%= label_tag ('archivos de especificaciones:') %>
        <% n = 0 %>
        <% ((@specifications.length).to_i).times do %>
          <%= link_to @specifications[n].document_url, target: '_blank' do %>
            <%= image_tag '/assets/notes.png', alt: 'Ícono documento naranja', class: 'document-icon img-responsive' %>
            <% n +=1 %>
          <% end %>
          <% document = @specifications[n-1] %>
          <%= link_to 'borrar', document_path(document), method: :delete, data: { confirm: 'Desa borrar este documento?' } %>
        <% end %>
      <% end %>
    </div>
<% end %>
