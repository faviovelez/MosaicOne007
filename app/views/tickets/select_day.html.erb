<%= form_tag({ controller: 'tickets', action: 'get_date' }, method: 'get', class: 'form-data-tables') do %>

  <br /><br />

  <h2 class="blue-title">Por favor seleccione la fecha y el tipo de reporte</h2>

  <br /><br />

  <div class="field">
    <%= label_tag :opciones %>
    <%= select_tag :options, options_for_select([['Seleccionar dÃ­a'], ['Mes actual'], ['Rango de fechas']]) %>
  </div>

  <div class="field">
    <%= label_tag :detalle %>
    <%= select_tag :report_type, options_for_select([['Resumido'], ['Detallado'], ['Por cliente'], ['Por producto o servicio']]) %>
  </div>

  <div class="field extra-margin-top">
    <%= label_tag :fecha_de_reporte %>
    <%= date_field_tag(:date, Date.today, options = {max: Date.today, min: current_user.store.tickets.first.created_at.to_date }) %>
  </div>

  <div class="group_fields hidden">
    <div class="field">
      <%= label_tag :fecha_inicial %>
      <%= date_field_tag(:initial_date, Date.today, options = {max: Date.today, min: current_user.store.tickets.order(:created_at).limit(1).pluck(:created_at).first.to_date }) %>
    </div>

    <div class="field">
      <%= label_tag :fecha_final %>
      <%= date_field_tag(:final_date, Date.today, options = {max: Date.today, min: current_user.store.tickets.order(:created_at).limit(1).pluck(:created_at).first.to_date }) %>
    </div>
  </div>

  <br /><br />

  <div class="actions">
    <%= submit_tag 'Ver reporte', class: 'main-button' %>
  </div>

  <br /><br />

<% end %>

<%= content_for :javascript do %>
  <%= javascript_include_tag 'reports' %>
<% end %>
