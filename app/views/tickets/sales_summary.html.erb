<table id="sales">
  <thead>
    <tr class="table-titles">
      <th class="col-md-1"> Mes / AÃ±o </th>
      <th> Subtotal </th>
      <th> Descuento $ </th>
      <th> Descuento % </th>
      <th> Pagos recibidos </th>
      <th> Total </th>
      <th> Costo </th>
      <th> Margen $ </th>
      <th> Margen % </th>
      <th class="col-md-2"> Detalles </th>
    </tr>
  </thead>
  <tbody>
    <% @summaries.each do |summary| %>
      <tr>
        <td> <%= summary.month %> / <%= summary.year %> </td>
        <td> <%= number_to_currency(summary.subtotal) %> </td>
        <td> <%= number_to_currency(summary.discount) %> </td>
        <td> <%= number_to_percentage(discount_percentage(summary), precision: 1) %> </td>
        <td> <%= number_to_currency(summary.payments) %> </td>
        <td> <%= number_to_currency(summary.total) %> </td>
        <td> <%= number_to_currency(summary.cost) %> </td>
        <td> <%= number_to_currency(margin_currency(summary)) %> </td>
        <td> <%= number_to_percentage(margin_percentage(summary), precision: 1) %> </td>
        <td>
          <% unless tickets_exists(summary.month, summary.year) %>
            <%= link_to sales_path(year: summary.year, month: summary.month, store: current_user.store) do %>
              <%= image_tag '/assets/ticket_main.png', alt: 'Ticket icon', class: 'sales-summary-icon' %>
            <% end %>
          <% end %>

          <% unless bills_exists(summary.month, summary.year) %>
            <%= link_to bills_issued_path(year: summary.year, month: summary.month, store: current_user.store) do %>
              <%= image_tag '/assets/pdf_alter.png', alt: 'Alternative icon PDF', class: 'sales-summary-icon' %>
            <% end %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= content_for :stylesheet do %>
  <%= stylesheet_link_tag 'datatables.min' %>
<% end %>

<%= content_for :javascript do %>
  <%= javascript_include_tag 'pdfmake.min' %>
  <%= javascript_include_tag 'vfs_fonts.js' %>
  <%= javascript_include_tag 'datatables.min.js' %>
  <%= javascript_include_tag 'sales' %>
<% end %>
