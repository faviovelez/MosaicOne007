<% if ((current_user.role.name == 'store' || current_user.role.name == 'store-admin') && @request.status != 'devuelta') %>
  <%= render 'update' %>
<% elsif ((current_user.role.name == 'store' || current_user.role.name == 'store-admin') && @request.status == 'devuelta') %>
  <%= render 'update_if_notes' %>
<% elsif current_user.role.name == 'manager' || current_user.role.name == 'director' %>
  <%= render 'info' %>
  <%= render 'update_for_manager' %>
<% end %>
