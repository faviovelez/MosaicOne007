<% if @request.internal_price.blank? %>

  <%= form_for(@request) do |f| %>
    <div class="field">
      <%= f.label :costo_de_venta %>
      <%= f.text_field :internal_cost %>
    </div>

    <div class="field">
      <%= f.label :precio_para_la_tienda %>
      <%= f.text_field :internal_price %>
    </div>

    <div class="actions">
      <%= f.submit :confirmar_costo, name: 'actualizar' %>
    </div>
  <% end %>

  <% if @request.status == 'solicitada' || @request.status == 'modificada' || @request.status == 'devuelta' %>
    <%= form_for(@request) do |t| %>
      <div class="field">
        <%= t.label :notas_para_la_tienda %>
        <%= t.text_area :notes %>
      </div>

      <div class="actions">
        <%= t.submit :enviar_dudas, name: 'devuelta' %>
      </div>
    <% end %>
  <% end %>

<% end %>
