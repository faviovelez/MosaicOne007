<script type="text/template" class="template">
  <td id='reason_{{= rc.id }}'>
    <div class="form-group">
     <% id = 'select_for_{{= rc.id }}_id' %>
     <%= select_tag 'select_for_{{= rc.id }}', options_for_select(options_to_remove), include_blank: 'Selecionar un producto', class: 'form-control remove_margin', id: id %>
    </div>
  </td>
  <td id='inventory_{{= rc.id }}'>{{= rc.inventory }}</td>
  <td id='description_{{= rc.id}}'>{{= rc.description }}</td>
  <td id='image_{{= rc.id}}'><a href="{{= rc.link }}" ><img src="{{= rc.image }}" alt="{{= rc.description }}" /></a></td>
  <td id='numbers_{{= rc.id}}'><div class="form-group"><input type='text' class="form-control" id='numProduct_{{= rc.id }}' required="true" /></div></td>
  <td id='add{{= rc.id}}'><a href='#' id='addNew{{= rc.id }}' class='btn btn-primary'><i class="fa fa-plus-square fa-2" aria-hidden="true"></i></a>
</script>
