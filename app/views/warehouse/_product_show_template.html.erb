<script type="text/template" class="template">
  <td id='description_{{= rc.id}}'>{{= rc.description }}</td>
  <td id='image_{{= rc.id}}'><a href="{{= rc.link }}" ><img src="{{= rc.image }}" alt="{{= rc.description }}" /></a></td>
  <td id='numbers_{{= rc.id}}'><div <div class="form-group"><input type='text' class="form-control" id='numProduct_{{= rc.id }}' required="true" /></div></td>
  <% if supplier.present? %>
    <td id='add{{= rc.id}}'><a href='#' id='addNew{{= rc.id }}' class='btn btn-primary'>Nuevo</a></td>
    <td id='supplier{{= rc.id}}'><a href="#" data-toggle="modal" data-target="#supplierModal" id='vincularSupplier{{= rc.id }}' class='btn btn-primary'>Proveedor</a></td>
  <% else %>
    <td id='add{{= rc.id}}'><a href='#' id='addNew{{= rc.id }}' class='btn btn-primary'>Agregar Nuevo</a></td>
  <% end %>
</script>
