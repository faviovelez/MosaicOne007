<script type="text/template" class="template">
  <td id='description_{{= rc.id}}'>{{= rc.description }}</td>
  <td id='image_{{= rc.id}}'><a href="{{= rc.link }}" ><img src="{{= rc.image }}" alt="{{= rc.description }}" /></a></td>
  <td id='numbers_{{= rc.id}}'><div class="form-group"><input type='text' class="form-control" id='numProduct_{{= rc.id }}' required="true" /></div></td>

  <% if supplier.present? %>

    <td id='add{{= rc.id}}'><a href='#' id='addNew{{= rc.id }}' class='btn btn-primary'>Nuevo</a>
    <a href="#" data-toggle="modal" data-id="{{= rc.id }}" data-target="#supplierModal" id='vincularSupplier{{= rc.id }}' class='btn btn-primary'>Proveedor</a></td>
    <td id='supplierInfo{{= rc.id }}' class='hidden'></td>

  <% else %>
    <td id='add{{= rc.id}}'><a href='#' id='addNew{{= rc.id }}' class='btn btn-primary'>Agregar Nuevo</a></td>
  <% end %>

</script>
