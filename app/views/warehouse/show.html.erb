<table class="tableSix" id="productsList">
  <thead>
    <tr>
      <% if @movements.first.movement_type == 'alta' %>
        <% if @movements.where.not(kg: nil).count > 0 %>
          <th colspan="7" class="table-titles" id="warehouseTitle"> Entradas de Mercancía del <%= l @movements.first.created_at.to_date, format: :short %> a las <%= @movements.first.created_at.strftime("%H:%M") %> HRS </td>
        <% else %>
          <th colspan="6" class="table-titles" id="warehouseTitle"> Entradas de Mercancía del <%= l @movements.first.created_at.to_date, format: :short %> a las <%= @movements.first.created_at.strftime("%H:%M") %> HRS </td>
        <% end %>
      <% else %>
        <% if @movements.where.not(kg: nil).count > 0 %>
          <th colspan="7" class="table-titles" id="warehouseTitle"> Salidas de Mercancía <%= l @movements.first.created_at.to_date, format: :short %> a las <%= @movements.first.created_at.strftime("%H:%M") %> HRS</td>
        <% else %>
          <th colspan="6" class="table-titles" id="warehouseTitle"> Salidas de Mercancía <%= l @movements.first.created_at.to_date, format: :short %> a las <%= @movements.first.created_at.strftime("%H:%M") %> HRS</td>
        <% end %>
      <% end %>
    </tr>
    <tr>
      <th> Producto </th>
      <th> Movimiento </th>
      <th> Cantidad </th>
      <% if @movements.where.not(kg: nil).count > 0 %>
        <th> Peso </th>
      <% end %>
      <th> Usuario </th>
      <th> Motivo / Folio </th>
      <th> Fecha / Hora </th>
    </tr>
  </thead>
  <tbody>
    <% @movements.each do |movement| %>
      <tr id="trForProduct<%= movement.product.id %>">
        <td> <%= movement.product.unique_code %> <%= movement.product.description %> </td>
        <td> <%= movement.movement_type.capitalize %> </td>
        <td> <%= number_with_delimiter(movement.quantity) %> </td>
        <% if @movements.where.not(kg: nil).count > 0 %>
          <% if movement.kg != nil %>
            <td> <%= movement.kg %> kg </td>
          <% else %>
            <td> N/A </td>
          <% end %>
        <% end %>
        <td> <%= movement.user.first_name.capitalize %> <%= movement.user.middle_name.capitalize %> <%= movement.user.last_name.capitalize %> </td>
        <td> <%= movement.reason %> </td>
        <td> <%= l @movements.first.created_at.to_date, format: :short %> <%= @movements.first.created_at.strftime("%H:%M") %> </td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= link_to 'Confirmar', warehouse_confirm_path(@codes), class: 'btn btn-primary', method: 'post' %>
